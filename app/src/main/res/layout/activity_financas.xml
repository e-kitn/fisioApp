<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    tools:context=".FinancasActivity"
    android:id="@+id/financas_activity">
    <TextView
        android:id="@+id/gastos"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="R$ 303,37"
        android:textColor="@color/colorTextPrimary"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_30sdp"/>
    <TextView
        android:id="@+id/text_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="@+id/gastos"
        android:text="Lucro Total"
        android:textColor="@color/colorTextSecondary"
        android:layout_alignParentEnd="@+id/gastos"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/_33sdp"
        android:textSize="@dimen/_15sdp"/>
    <!---<com.db.williamchart.view.LineChartView
        android:id="@+id/chartGastos"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_70sdp"
        app:chart_labelsColor="@color/colorTextPrimary"
        app:chart_lineColor="@color/colorTextSecondary"
        app:chart_smoothLine="true"
        app:chart_labelsSize="@dimen/_15sdp"/> -->
    <EditText
        android:id="@+id/gastosEt"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="wrap_content"
        android:hint="Gastos"
        android:inputType="numberDecimal"
        android:textColorHint="@color/white"
        android:background="@drawable/background_input_field"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_88sdp"
        android:drawableStart="@drawable/baseline_attach_money_24"
        android:drawablePadding="@dimen/_5sdp"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/colorTextSecondary"
        android:layout_marginLeft="@dimen/_3sdp"/>
    <Spinner
        android:id="@+id/spinner_gastos"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_130sdp"/>
    <ImageView
        android:id="@+id/adicionar"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:src="@drawable/baseline_add_24"
        app:tint="@color/colorTextSecondary"
        android:background="@color/white"
        android:backgroundTint="@color/colorTextPrimary"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_92sdp"
        android:layout_marginEnd="@dimen/_20sdp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_170sdp"
        android:backgroundTint="@color/colorSecondary"
        app:cardUseCompatPadding="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tipo_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/baseline_shopping_cart_24"
            app:civ_border_width="@dimen/_1sdp"
            app:civ_border_color="@color/white"
            android:padding="@dimen/_5sdp"/>
        <TextView
            android:id="@+id/tipo_gasto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_toEndOf="@id/tipo_image"
            android:text="Materiais"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/_16sdp" />
        <TextView
            android:id="@+id/valor_gasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="@dimen/_20sdp"
            android:text="R$ - 63,50"
            android:textColor="@color/colorThemeExtra"
            android:background="@color/colorPrimary"
            android:layout_marginRight="5sp"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:paddingTop="@dimen/_1sdp"
            android:paddingBottom="@dimen/_1sdp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_245sdp"
        android:backgroundTint="@color/colorSecondary"
        app:cardUseCompatPadding="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/baseline_directions_car_24"
            app:civ_border_width="@dimen/_1sdp"
            app:civ_border_color="@color/white"
            android:padding="@dimen/_5sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_toEndOf="@id/tipo_image"
            android:text="Transporte"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/_16sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="@dimen/_20sdp"
            android:text="R$ - 53,13"
            android:textColor="@color/colorThemeExtra"
            android:background="@color/colorPrimary"
            android:layout_marginRight="5sp"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:paddingTop="@dimen/_1sdp"
            android:paddingBottom="@dimen/_1sdp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_320sdp"
        android:backgroundTint="@color/colorSecondary"
        app:cardUseCompatPadding="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/baseline_medical_information_24"
            app:civ_border_width="@dimen/_1sdp"
            app:civ_border_color="@color/white"
            android:padding="@dimen/_5sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_toEndOf="@id/tipo_image"
            android:text="Consultas"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/_16sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="@dimen/_20sdp"
            android:text="R$ + 420,00"
            android:textColor="@color/colorTextPrimary"
            android:background="@color/colorPrimary"
            android:layout_marginRight="5sp"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:paddingTop="@dimen/_1sdp"
            android:paddingBottom="@dimen/_1sdp"/>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/financas_bottom_appbar"
        android:background="@color/colorPrimary"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/colorTextPrimary"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>